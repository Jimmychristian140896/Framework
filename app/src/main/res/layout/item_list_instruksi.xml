<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/timeline_instruksi"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:marker="@drawable/circle_instruction"
        app:markerSize="10dp"
        app:lineSize="2dp"
        app:line="@color/colorPrimary"
        app:linePadding="4dp"
        app:markerInCenter="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="4dp"
        />

    <TextView
        android:id="@+id/txt_instruksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instruksi"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/timeline_instruksi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
android:textSize="16sp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/txt_sub_instruksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sub Instruksi"
        android:textSize="17sp"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/timeline_instruksi"
        app:layout_constraintTop_toBottomOf="@+id/txt_instruksi"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginLeft="16dp"/>

    <TextView
    android:id="@+id/txt_salin"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Salin"
    android:textSize="14sp"
    android:textColor="@color/colorAccent"
    app:layout_constraintLeft_toRightOf="@+id/timeline_instruksi"
    app:layout_constraintTop_toBottomOf="@+id/txt_sub_instruksi"
    app:layout_constraintRight_toRightOf="parent"

    android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:id="@+id/layout_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/timeline_instruksi"
        app:layout_constraintTop_toBottomOf="@+id/txt_salin"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp">
    <ImageView
        android:id="@+id/img_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:layout_margin="4dp"/>
        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_add_black_24dp"
            android:layout_margin="4dp"/>
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_image"/>
</android.support.constraint.ConstraintLayout>