<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<TextView
    android:id="@+id/lbl_upgrade"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Updrade ke OVO Premier"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="60dp"
    android:textSize="20sp"
    android:textColor="@color/colorAccent"
    />

    <TextView
        android:id="@+id/lbl_upgrade_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lbl_upgrade"
        android:text="Nikmati fitur Budget untuk memantau pengeluaran harian maupun bulanan Anda"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:lines="2"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:id="@+id/img_upgrade_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lbl_upgrade_deskripsi"
        app:srcCompat="@drawable/ic_add_black_24dp"
        android:layout_marginTop="50dp"
        />

    <Button
        android:id="@+id/btn_upgrade_sekarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="UPGRADE SEKARANG"
        android:textColor="@color/colorAccent"
        android:background="@drawable/button_circle"/>
</android.support.constraint.ConstraintLayout>