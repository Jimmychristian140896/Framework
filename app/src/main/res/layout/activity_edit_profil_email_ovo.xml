<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    </android.support.design.widget.AppBarLayout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="32dp">
        <TextView
            android:id="@+id/lbl_title_ubah_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ubah Email"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/lbl_email_terdaftar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Terdaftar"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_title_ubah_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_email_terdaftar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="jimmychristian140896@gmail.com"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/lbl_email_terdaftar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/lbl_email_baru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email Baru"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_email_terdaftar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <EditText
            android:id="@+id/txt_email_baru"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintTop_toBottomOf="@+id/lbl_email_baru"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/lbl_title_instruksi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Instruksi"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_email_baru"
            />

        <View
            android:id="@+id/circle_ubah_email_anda"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_instruction"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_title_instruksi"/>
        <TextView
            android:id="@+id/lbl_ubah_email_anda"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ubah email Anda"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/circle_ubah_email_anda"
            app:layout_constraintTop_toTopOf="@+id/circle_ubah_email_anda"
            app:layout_constraintBottom_toBottomOf="@+id/circle_ubah_email_anda"
            app:layout_constraintRight_toRightOf="parent"/>

        <View
            android:id="@+id/line_circle"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintRight_toRightOf="@+id/circle_lakukan_login_ulang"
            app:layout_constraintLeft_toLeftOf="@+id/circle_lakukan_login_ulang"
            app:layout_constraintBottom_toTopOf="@+id/circle_lakukan_login_ulang"
            app:layout_constraintTop_toBottomOf="@+id/circle_ubah_email_anda"
            />


        <View
            android:id="@+id/circle_lakukan_login_ulang"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/circle_instruction"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lbl_ubah_email_anda"/>
        <TextView
            android:id="@+id/lbl_lakukan_login_ulang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Lakukan Login Ulang"
            android:layout_marginLeft="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toRightOf="@+id/circle_lakukan_login_ulang"
            app:layout_constraintTop_toTopOf="@+id/circle_lakukan_login_ulang"
            app:layout_constraintBottom_toBottomOf="@+id/circle_lakukan_login_ulang"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/btn_simpan_profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SIMPAN"
            android:textColor="@android:color/white"
            android:background="@drawable/button_selector_simpan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
