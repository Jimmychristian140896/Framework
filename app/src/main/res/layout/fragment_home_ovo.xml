<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeOvoFragment">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_customer_ovo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_notifications_black_24dp"/>
        <ImageView
            android:id="@+id/img_customer_ovo_type"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintRight_toRightOf="@+id/img_customer_ovo"
            app:layout_constraintBottom_toBottomOf="@+id/img_customer_ovo"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            android:layout_margin="8dp"/>
        <TextView
            android:id="@+id/txt_customer_name_ovo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jimmy"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_customer_ovo"/>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_ovo_cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_green_circle_edge"
            app:layout_constraintTop_toBottomOf="@+id/txt_customer_name_ovo"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/txt_ovo_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OVO CASH"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/txt_customer_ovo_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="998.000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ovo_cash"/>
            <TextView
                android:id="@+id/txt_customer_ovo_cash_rp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/txt_customer_ovo_cash"
                app:layout_constraintRight_toLeftOf="@+id/txt_customer_ovo_cash"/>
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_ovo_investasi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_home_ovo_investasi"
            app:layout_constraintTop_toBottomOf="@+id/layout_ovo_cash"
            app:layout_constraintWidth_percent="0.44"
            app:layout_constraintLeft_toLeftOf="@+id/layout_ovo_cash"
            android:layout_marginTop="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_ovo_investasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INVESTASI"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/txt_ovo_investasi_minimum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min. Rp10.000"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ovo_investasi"/>
            <TextView
                android:id="@+id/txt_ovo_investasi_mulai_sekarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai Sekarang"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ovo_investasi_minimum"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/layout_ovo_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/layout_green_circle_edge"
            app:layout_constraintTop_toBottomOf="@+id/layout_ovo_cash"
            app:layout_constraintWidth_percent="0.44"
            app:layout_constraintRight_toRightOf="@+id/layout_ovo_cash"
            app:layout_constraintBottom_toBottomOf="@+id/layout_ovo_investasi"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/txt_ovo_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OVO POINTS"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/txt_customer_ovo_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9.999.000"
                android:textStyle="bold"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_ovo_point"/>

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/img_near_me"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_ovo_investasi"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/txt_near_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOP UP"
            app:layout_constraintTop_toBottomOf="@+id/img_near_me"
            app:layout_constraintRight_toRightOf="@+id/img_near_me"
            app:layout_constraintLeft_toLeftOf="@+id/img_near_me"/>

        <ImageView
            android:id="@+id/img_deals_promo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_ovo_investasi"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/txt_deals_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCAN"
            app:layout_constraintTop_toBottomOf="@+id/img_deals_promo"
            app:layout_constraintRight_toRightOf="@+id/img_deals_promo"
            app:layout_constraintLeft_toLeftOf="@+id/img_deals_promo"/>

        <ImageView
            android:id="@+id/img_my_vouchers"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_ovo_investasi"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/my_vouchers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSFER"
            app:layout_constraintTop_toBottomOf="@+id/img_my_vouchers"
            app:layout_constraintRight_toRightOf="@+id/img_my_vouchers"
            app:layout_constraintLeft_toLeftOf="@+id/img_my_vouchers"/>

        <ImageView
            android:id="@+id/img_mall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_near_me"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/txt_mall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLN"
            app:layout_constraintTop_toBottomOf="@+id/img_mall"
            app:layout_constraintRight_toRightOf="@+id/img_mall"
            app:layout_constraintLeft_toLeftOf="@+id/img_mall"/>

        <ImageView
            android:id="@+id/img_merchants"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_deals_promo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/txt_merchants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PULSA"
            app:layout_constraintTop_toBottomOf="@+id/img_merchants"
            app:layout_constraintRight_toRightOf="@+id/img_merchants"
            app:layout_constraintLeft_toLeftOf="@+id/img_merchants"/>

        <ImageView
            android:id="@+id/img_lihat_semua"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp"
            app:layout_constraintTop_toBottomOf="@+id/my_vouchers"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="16dp"/>
        <TextView
            android:id="@+id/txt_lihat_semua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIHAT SEMUA"
            app:layout_constraintTop_toBottomOf="@+id/img_lihat_semua"
            app:layout_constraintRight_toRightOf="@+id/img_lihat_semua"
            app:layout_constraintLeft_toLeftOf="@+id/img_lihat_semua"/>

        <android.support.constraint.ConstraintLayout
            android:layout_width="50dp"
            android:layout_height="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/layout_half_circle"
            android:elevation="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="^"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>