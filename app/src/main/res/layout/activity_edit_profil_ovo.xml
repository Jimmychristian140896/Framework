<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />


    </android.support.design.widget.AppBarLayout>
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="32dp">
        <ImageView
            android:id="@+id/img_foto_profil"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_black_24dp"
            />
        <TextView
            android:id="@+id/lbl_perbaharui_foto_profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Perbaharui Foto Profil"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toTopOf="@+id/img_foto_profil"
            app:layout_constraintBottom_toBottomOf="@+id/img_foto_profil"
            app:layout_constraintLeft_toRightOf="@+id/img_foto_profil"
            />

        <TextView
            android:id="@+id/lbl_nama_lengkap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@+id/img_foto_profil"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <EditText
            android:id="@+id/txt_nama_lengkap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jimmy"
            app:layout_constraintTop_toBottomOf="@+id/lbl_nama_lengkap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/lbl_nomor_ponsel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nomor Ponsel"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nama_lengkap"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_nomor_ponsel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="089649004169"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/lbl_nomor_ponsel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/lbl_ubah_nomor_ponsel"
            />

        <TextView
            android:id="@+id/lbl_ubah_nomor_ponsel"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Ubah"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:gravity="right"
            app:layout_constraintBottom_toBottomOf="@+id/txt_nomor_ponsel"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/lbl_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="16dp"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_nomor_ponsel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="jimmychristian140896@gmai.com"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toBottomOf="@+id/lbl_email"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/lbl_ubah_email"
            />

        <TextView
            android:id="@+id/lbl_ubah_email"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="Ubah"
            android:textSize="14sp"
            android:textColor="@color/colorAccent"
            android:gravity="right"
            app:layout_constraintBottom_toBottomOf="@+id/txt_email"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/btn_simpan_profil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SIMPAN"
            android:textColor="@android:color/white"
            android:background="@drawable/button_selector_simpan"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
